<html>
    <head>
        <title>Dashboard</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../public/css/bootstrap.min.css">
        <script src="../public/js/bootstrap.min.js"></script>
        <script src="../public/js/bootstrap.min.js"></script>
        <script src="../public/js/jquery-3.3.1.min.js"></script>
        <!-- For DataTables -->
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
    </head>
    <body>
        <div class="container">
            <h2>List of users</h2>
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="myTable">
                    <caption>List of users</caption>
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<data.length; i++) { %>
                            <tr>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].email %></td>
                                <td><%= data[i].phone %></td>
                                <td>
                                    <button type="button" id="<%=data[i].name %>" class="update btn btn-warning" 
                                        data-toggle="modal" data-target="#myModal" >Edit</button>
                                      
                                    <button type="button" id="<%=data[i].name %>" class="delete btn btn-danger"
                                        value="<%=data[i].name %>" >Delete</button>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                    <tfoot class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div>

    </body>
</html>